{
  "index_patterns": [
    "video_*"
  ],
  "mappings": {
    "_doc": {
      "properties": {
        "asset_id": {
          "type": "keyword"
        },
        "date_recorded": {
          "type": "date"
        },
        "description": {
          "type": "text",
          "analyzer": "english"
        },
        "thumbnail_url": {
          "type": "keyword"
        },
        "title": {
          "type": "text",
          "analyzer": "english"
        },
        "title_slug": {
          "type": "keyword"
        },
        "transcription": {
          "type": "text",
          "analyzer": "english"
        },
        "transcription_json": {
          "type": "object",
          "enabled": false
        },
        "tags": {
          "type": "keyword"
        },
        "topics": {
          "type": "keyword"
        },
        "video_url": {
          "type": "keyword"
        },
        "program_series": {
          "type": "keyword"
        },
        "speakers": {
          "type": "keyword"
        }
      }
    }
  }
}
